<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.text.Text?>
<Pane prefWidth="600.0" prefHeight="400.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      style="-fx-background-color: #e7f4ed"
      fx:controller="com.example.demo2.GameResultController">
    <Text textAlignment="CENTER"
        layoutX="200.0" layoutY="45.0" text="RESULT">
        <font>
            <Font name="System Bold" size="30.0"/>
        </font>
    </Text>
    <Button layoutX="360.0" layoutY="14.0"
        onAction="#onBack"
        prefWidth="120.0" prefHeight="39.0"
        text="Back To Dictionary"/>
    <Text layoutX="120.0" layoutY="150.0"
        text="SCORE">
        <font>
            <Font size="25.0"/>
        </font>
    </Text>
    <TextField fx:id="yourScore"
        alignment="CENTER"
        editable="false"
        layoutX="232.0" layoutY="115.0"
        prefWidth="250.0" prefHeight="50.0" >
        <font>
            <Font size="25.0"/>
        </font>
    </TextField>
    <Text layoutX="120.0" layoutY="250.0"
        text="LEVEL">
        <font>
            <Font size="25.0"/>
        </font>
    </Text>
    <TextField fx:id="yourLevel"
        alignment="CENTER"
        editable="false"
        layoutX="232" layoutY="215.0"
        prefWidth="250.0" prefHeight="60.0">
        <font>
            <Font size="25.0"/>
        </font>
    </TextField>
</Pane>
