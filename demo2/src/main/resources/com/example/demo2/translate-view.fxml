<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextArea?>
<Pane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo2.TranslateController"
      style="-fx-background-color: #CCFFFF"
      prefWidth="670.0" prefHeight="400.0">
   <Text textAlignment="CENTER"
      layoutX="250.0" layoutY="40.0" text="TRANSLATE">
      <font>
         <Font size="30.0"/>
      </font>
   </Text>
   <Button layoutX="540.0" layoutY="8.0"
      onAction="#onBack"
      prefWidth="108.0" prefHeight="35.0"
      text="Back">
   </Button>
   <TextField fx:id="text1"
      alignment="CENTER"
      layoutX="27.0" layoutY="80.0"
      prefWidth="250.0" prefHeight="30"
      editable="false"
      text="English">
      <font>
         <Font size="18.0"/>
      </font>
   </TextField>
   <TextField fx:id="text2"
      alignment="CENTER"
      layoutX="395.0" layoutY="80.0"
      prefWidth="250.0" prefHeight="30"
      editable="false"
      text="Vietnamese">
      <font>
         <Font size="18.0"/>
      </font>
   </TextField>
   <Button layoutX="295.0" layoutY="80.0"
      onAction="#onSwitch"
      prefWidth="80.0" prefHeight="35.0"
      text="Switch"/>

   <TextArea fx:id="word"
      layoutX="27.0" layoutY="180.0"
      prefWidth="250.0" prefHeight="140.0"
      promptText="word"/>
   <TextArea fx:id="meaning"
      layoutX="395.0" layoutY="180.0"
      prefWidth="250.0" prefHeight="140.0"
      promptText="meaning"/>
   <Button layoutX="295.0" layoutY="180.0"
      onAction="#onTransClick"
      prefWidth="80.0" prefHeight="35.0"
      text="Translate"/>
</Pane>
